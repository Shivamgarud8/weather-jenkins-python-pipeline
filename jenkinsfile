pipeline {
    agent any

    environment {
        SSH_CRED = 'jenkins-python'              // âœ… Your Jenkins SSH key ID
        SERVER_IP = '51.21.160.231'           // âœ… EC2 public IP
        REMOTE_USER = 'ubuntu'               // âœ… Default EC2 Ubuntu user
        APP_DIR = '/home/ubuntu/flask-weather-app'
        PYTHON_ENV = '/home/ubuntu/flask-weather-app/venv'
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo "ğŸ“¥ Cloning the Flask Weather App repository..."
                git url: 'https://github.com/Shivamgarud8/weather-jenkins-python-pipeline', branch: 'main'
            }
        }

        stage('Deploy Application to EC2') {
            steps {
                echo "ğŸš€ Deploying files to EC2 Server..."
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "mkdir -p ${APP_DIR}"
                        scp -o StrictHostKeyChecking=no -r app.py requirements.txt templates static ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                    '''
                }
            }
        }

        stage('Install Dependencies & Run App') {
            steps {
                echo "âš™ï¸ Installing dependencies and starting Flask app..."
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            sudo apt update -y &&
                            sudo apt install -y python3 python3-venv python3-pip &&
                            cd ${APP_DIR} &&
                            python3 -m venv venv &&
                            source venv/bin/activate &&
                            pip install --upgrade pip &&
                            pip install -r requirements.txt &&
                            # Kill any previous Flask app running on port 5000
                            pkill -f "python3 app.py" || true &&
                            nohup python3 app.py > app.log 2>&1 &
                            echo "âœ… Flask app deployed and running on http://13.48.196.11:5000/"
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Deployment Successful! Your Flask Weather App is live at: http://13.48.196.11:5000/"
        }
        failure {
            echo "âŒ Deployment Failed! Check Jenkins logs for details."
        }
    }
}
