pipeline {
    agent any

    environment {
        SERVER_IP      = '16.16.99.185'               // your EC2 public IP
        SSH_CREDENTIAL = 'weather-key'                // your Jenkins SSH key ID
        REPO_URL       = 'https://github.com/Shivamgarud8/weather-jenkins-python-pipeline.git'
        BRANCH         = 'main'
        REMOTE_USER    = 'ubuntu'
        APP_DIR        = '/home/ubuntu/weather-app'
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent (credentials: ["${SSH_CREDENTIAL}"]) {
                    sh '''
                        echo "üîß Deploying Flask Weather App to EC2..."

                        # Create app directory on EC2
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "mkdir -p ${APP_DIR}"

                        # Copy necessary files
                        scp -o StrictHostKeyChecking=no -r app.py requirements.txt templates ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/

                        # Setup environment and start app
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "
                            cd ${APP_DIR} && \
                            sudo apt update -y && \
                            sudo apt install -y python3-pip && \
                            pip install --upgrade pip && \
                            pip install -r requirements.txt && \
                            sudo fuser -k 5000/tcp || true && \
                            nohup python3 app.py > app.log 2>&1 &
                        "
                    '''
                }
            }
        }

        stage('Health Check') {
            steps {
                echo "üîç Checking if Flask app is accessible..."
                script {
                    // Wait 5 seconds to ensure Flask boots up
                    sleep 5
                    def response = sh(script: "curl -s -o /dev/null -w %{http_code} http://${SERVER_IP}:5000", returnStdout: true).trim()
                    if (response != '200') {
                        error("Flask app not responding. HTTP code: ${response}")
                    }
                }
            }
        }

        stage('Show App URL') {
            steps {
                echo "‚úÖ Flask Weather App deployed successfully!"
                echo "üåê Visit your app: http://${SERVER_IP}:5000"
            }
        }
    }

    post {
        failure {
            echo "‚ùå Deployment Failed! Please check Jenkins logs for errors."
        }
        success {
            echo "üéâ Deployment completed successfully! Weather App is live."
        }
    }
}
